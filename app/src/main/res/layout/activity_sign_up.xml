<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SignUpActivity"
    android:id="@+id/relativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:id="@+id/signUpButton"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameTextBox"
        android:layout_gravity="center"
        android:hint="Nombre"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/passwordTextBox"
        android:layout_alignStart="@+id/passwordTextBox"
        android:singleLine="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/emailTextBox"
        android:layout_gravity="center"
        android:hint="E-Mail"
        android:layout_below="@+id/padronTextBox"
        android:layout_alignLeft="@+id/firstNameTextBox"
        android:layout_alignStart="@+id/firstNameTextBox"
        android:layout_marginTop="10dp"
        android:singleLine="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/passwordTextBox"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/emailTextBox"
        android:layout_centerHorizontal="true"
        android:singleLine="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameTextBox"
        android:layout_gravity="center"
        android:hint="Apellido"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/firstNameTextBox"
        android:layout_alignLeft="@+id/emailTextBox"
        android:layout_alignStart="@+id/emailTextBox"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Completá con tus datos"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/padronTextBox"
        android:layout_gravity="center"
        android:hint="Padrón o Pasaporte"
        android:layout_below="@+id/lastNameTextBox"
        android:layout_alignLeft="@+id/emailTextBox"
        android:layout_alignStart="@+id/emailTextBox"
        android:layout_marginTop="10dp"
        android:singleLine="true" />

</RelativeLayout>
