<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marco.fiubados" >

    <uses-sdk android:minSdkVersion="12" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--
     The following two permissions are not required to use
     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:process="android.process.media"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainScreenActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_news"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchUsersActivity" />
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_sign_up"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:configChanges="orientation"
            android:label="Perfil"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ProfileEditActivity"
            android:configChanges="orientation"
            android:label="Edición de perfil"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".NotificationsActivity"
            android:configChanges="orientation"
            android:label="Notificaciones"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SearchUsersActivity"
            android:label="Busqueda de usuario" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".JobsProfileEditActivity"
            android:configChanges="orientation"
            android:label="Edición de perfil"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AcademicProfileEditActivity"
            android:configChanges="orientation"
            android:label="Edicion de perfil"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.group.GroupMainActivity"
            android:label="@string/title_activity_group_main"
            android:parentActivityName="com.example.marco.fiubados.MainScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marco.fiubados.MainScreenActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDrw4RG-NCzjwiqi90o_-TmxrJ6y0j04vU" />
    </application>

</manifest>
